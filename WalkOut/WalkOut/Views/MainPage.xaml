             Title="{Binding Title}"
             BackgroundColor="#11A378">

    <StackLayout>
        <Button ImageSource="ic_go_out.png"  Command="{Binding OpenForm}" FontSize="Large" BackgroundColor="#11A378" Scale="0.5"
                HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="250" WidthRequest="250"/>
    </StackLayout>

</ContentPage>